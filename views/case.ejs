                  <!DOCTYPE html>
                  <html lang="en">
                  <head>
                    <meta charset="UTF-8">
                    <title>IA Case</title>
                    <script src="https://cdn.tailwindcss.com"></script>
                  </head>
                  <body class="bg-gray-100 text-gray-900">
                    <div class="bg-blue-900 text-white py-4">
                      <div class="container mx-auto px-6">
                        <div class="flex justify-between items-center">
                          <h1 class="text-xl font-bold">BCSO Internal Affairs Dashboard</h1>
                          <div class="space-x-4">
                            <a href="/admin/users" class="bg-white text-blue-900 px-4 py-2 rounded font-semibold hover:bg-gray-200 transition">Manage Users</a>
                            <a href="/logout" class="text-white underline">Logout</a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="container mx-auto p-6">
                      <h2 class="text-2xl font-bold mb-4">Case <%= caseData.caseNum %></h2>
                      <div class="space-y-2">
                        <p><strong>Complainant:</strong> <%= caseData.complainant %></p>
                        <p><strong>Officer:</strong> <%= caseData.officer %></p>
                        <p><strong>Date:</strong> <%= caseData.incidentDate %></p>
                        <p><strong>Severity:</strong> <%= caseData.severity %></p>
                        <p><strong>Status:</strong> <%= caseData.status %></p>
                        <p><strong>Assigned:</strong> <%= caseData.assigned %></p>
                      </div>
                      <div class="mt-4">
                        <h3 class="text-xl font-semibold mb-2">Summary</h3>
                        <p class="whitespace-pre-line"><%= caseData.summary %></p>
                      </div>
                      <div class="mt-4">
                        <h3 class="text-xl font-semibold mb-2">Attachments</h3>
                        <ul class="list-disc list-inside">
                          <% attachments.forEach(att => { %>
                            <li><a class="text-blue-700 underline" href="<%= att.url %>" target="_blank"><%= att.url %></a></li>
                          <% }) %>
                        </ul>
                      </div>
                      <div class="mt-4">
                        <h3 class="text-xl font-semibold mb-2">Comments</h3>
                        <ul class="space-y-2">
                          <% comments.forEach(c => { %>
                            <li class="bg-gray-100 p-2 rounded">
                              <strong><%= c.author %>:</strong> <%= c.content %> <span class="text-sm text-gray-600">(<%= new Date(c.createdAt).toLocaleString() %>)</span>
                            </li>
                          <% }) %>
                        </ul>
                        <form method="POST" action="/case/<%= caseData.caseNum %>/comment" class="mt-4">
                          <textarea name="comment" required class="border rounded p-2 w-full" placeholder="Add a comment..."></textarea>
                          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded mt-2 hover:bg-blue-700">Add Comment</button>
                        </form>
                      </div>
                      <div class="mt-6">
                        <a href="/case/<%= caseData.caseNum %>/edit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Edit Case</a>
                        <a href="/case/<%= caseData.caseNum %>/export" class="ml-2 bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-900">Export PDF</a>
                      </div>
                    </div>
                  </body>
                  </html>