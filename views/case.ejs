<% layout('layout') %>
<h2 class="text-2xl font-semibold mb-4">Case <%= caseData.caseNum %></h2>
<div class="space-y-2">
  <p><strong>Complainant:</strong> <%= caseData.complainant %></p>
  <p><strong>Officer:</strong> <%= caseData.officer %></p>
  <p><strong>Date:</strong> <%= caseData.incidentDate %></p>
  <p><strong>Severity:</strong> <%= caseData.severity %></p>
  <p><strong>Status:</strong> <%= caseData.status %></p>
  <p><strong>Assigned:</strong> <%= caseData.assigned %></p>
  <p><strong>Summary:</strong><br><%= caseData.summary %></p>
</div>
<div class="mt-4 space-x-4">
  <a href="/case/<%= caseData.caseNum %>/edit" class="text-blue-600 hover:underline">Edit</a>
  <a href="/case/<%= caseData.caseNum %>/export" class="text-blue-600 hover:underline">Export PDF</a>
</div>

<h3 class="text-xl font-semibold mt-6">Attachments</h3>
<ul class="list-disc ml-6">
  <% for (const att of attachments) { %>
    <li><a href="<%= att.url %>" class="text-blue-600 hover:underline" target="_blank"><%= att.url %></a></li>
  <% } %>
</ul>

<h3 class="text-xl font-semibold mt-6">Comments</h3>
<ul class="space-y-2">
  <% for (const c of comments) { %>
    <li><strong><%= c.author %>:</strong> <%= c.content %></li>
  <% } %>
</ul>
<form method="POST" action="/case/<%= caseData.caseNum %>/comment" class="mt-4 space-y-2">
  <textarea name="comment" required class="border p-2 w-full rounded"></textarea>
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Post Comment</button>
</form>
