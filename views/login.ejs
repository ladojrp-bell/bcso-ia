<% layout('layout') %>
<h2 class="text-2xl font-semibold mb-4">Login</h2>
<form method="POST" action="/login" class="space-y-4">
  <% if (error) { %><p class="text-red-600"><%= error %></p><% } %>
  <input name="username" placeholder="Username" required class="border p-2 w-full rounded">
  <input name="password" type="password" placeholder="Password" required class="border p-2 w-full rounded">
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Login</button>
</form>
